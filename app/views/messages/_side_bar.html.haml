.side-bar
  .side-bar__side-header
    .side-header__box
      .box__user-name 
        = current_user.name
      .box__menu
        .menu__new 
        = link_to new_group_path do
          = icon('fa', 'edit')
        .menu__edit 
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: 'icon')
  .side-bar__groups
    - current_user.groups.each do |group|
      .groups__group
        = link_to '#' do
          .group__group-name
            = group.name
          .group__message
            まだメッセージがありません

